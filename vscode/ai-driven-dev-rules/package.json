{
  "name": "github-explorer",
  "displayName": "GitHub Explorer",
  "description": "Browse and download files from GitHub repositories directly within VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "githubExplorer.setRepository",
        "title": "GitHub Explorer: Set Repository",
        "icon": "$(repo)"
      },
      {
        "command": "githubExplorer.refresh",
        "title": "GitHub Explorer: Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "githubExplorer.toggleSelection",
        "title": "GitHub Explorer: Toggle Selection",
        "icon": "$(check)"
      },
      {
        "command": "githubExplorer.downloadSelected",
        "title": "GitHub Explorer: Download Selected Files",
        "icon": "$(cloud-download)"
      },
      {
        "command": "githubExplorer.welcome",
        "title": "GitHub Explorer: Show Welcome Message"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "github-explorer",
          "title": "GitHub Explorer",
          "icon": "$(github)"
        }
      ]
    },
    "views": {
      "github-explorer": [
        {
          "id": "githubExplorer",
          "name": "Repository Explorer",
          "icon": "$(github)",
          "contextualTitle": "GitHub Explorer"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "githubExplorer.setRepository",
          "when": "view == githubExplorer",
          "group": "navigation"
        },
        {
          "command": "githubExplorer.refresh",
          "when": "view == githubExplorer",
          "group": "navigation"
        },
        {
          "command": "githubExplorer.downloadSelected",
          "when": "view == githubExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "githubExplorer.toggleSelection",
          "when": "view == githubExplorer",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
